<script>
  // Auto-refresh for pending statuses
  document.addEventListener('DOMContentLoaded', function() {
    const currentStatus = '<%= status.status %>'.toLowerCase();
    const isPending = ['pending', 'processing', 'installing'].includes(currentStatus);
    
    console.log('ğŸ“Š Current status:', currentStatus);
    console.log('â³ Is pending:', isPending);
    
    // Manual refresh button handler - Her zaman Ã§alÄ±ÅŸmalÄ±
    const refreshButtons = document.querySelectorAll('[data-action="refresh"], .btn-secondary');
    
    refreshButtons.forEach(btn => {
      if (btn.textContent.includes('Refresh')) {
        console.log('ğŸ”„ Setting up refresh button:', btn);
        
        btn.addEventListener('click', function(e) {
          e.preventDefault();
          
          console.log('ğŸ”„ Refresh button clicked');
          
          // Button'u disable et ve loading state gÃ¶ster
          this.disabled = true;
          this.style.opacity = '0.6';
          this.style.cursor = 'not-allowed';
          
          const originalHTML = this.innerHTML;
          this.innerHTML = '<span class="btn-icon">â³</span> Refreshing...';
          
          // KÄ±sa delay sonra sayfayÄ± yenile
          setTimeout(() => {
            window.location.reload();
          }, 500);
        });
      }
    });
    
    if (isPending) {
      console.log('ğŸ“¡ Status is pending, setting up auto-refresh...');
      
      let refreshCount = 0;
      const maxRefreshes = 10; // Maximum 10 refreshes (5 minutes)
      
      const refreshTimer = setInterval(() => {
        refreshCount++;
        
        if (refreshCount >= maxRefreshes) {
          clearInterval(refreshTimer);
          console.log('â° Auto-refresh stopped after maximum attempts');
          
          // Manual refresh'e vurgu yap
          const manualRefreshBtn = document.querySelector('.btn-secondary');
          if (manualRefreshBtn) {
            manualRefreshBtn.style.background = '#fbbf24';
            manualRefreshBtn.style.color = '#92400e';
            manualRefreshBtn.style.border = '1px solid #f59e0b';
            manualRefreshBtn.innerHTML = '<span class="btn-icon">ğŸ”„</span> Manual Refresh Required';
          }
          return;
        }
        
        console.log(`ğŸ”„ Auto-refreshing... (${refreshCount}/${maxRefreshes})`);
        window.location.reload();
        
      }, 30000); // Refresh every 30 seconds
      
      // Auto-refresh indicator ekle
      const statusActions = document.querySelector('.status-actions');
      if (statusActions) {
        const indicator = document.createElement('div');
        indicator.className = 'auto-refresh-indicator';
        indicator.style.cssText = `
          text-align: center;
          margin-top: 16px;
          padding: 12px;
          background: #fef3c7;
          color: #92400e;
          border-radius: 8px;
          font-size: 14px;
          font-weight: 500;
          border: 1px solid #fde68a;
        `;
        
        const updateIndicator = () => {
          indicator.innerHTML = `
            <span style="animation: pulse 2s infinite;">â³</span>
            Auto-refreshing every 30 seconds... (${refreshCount}/${maxRefreshes})
            <br><small>or click "Refresh Status" for manual update</small>
          `;
        };
        
        updateIndicator();
        statusActions.after(indicator);
        
        // Update counter every second
        setInterval(updateIndicator, 1000);
      }
    }
  });
  
  // Alternative: Global refresh function
  window.refreshStatus = function() {
    console.log('ğŸ”„ Global refresh function called');
    
    const btn = document.querySelector('[data-action="refresh"]');
    if (btn) {
      btn.disabled = true;
      btn.style.opacity = '0.6';
      btn.innerHTML = '<span class="btn-icon">â³</span> Refreshing...';
    }
    
    setTimeout(() => {
      window.location.reload();
    }, 300);
  };
  
</script><%- include('partials/header', {title: 'Purchase Status', user: locals.user}) %>

